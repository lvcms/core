{
    "name": "lvcms/core",
    "type": "library",
    "description": ":后台管理系统 core 使用自动构建 html",
    "keywords": [
        "lvcms",
        "core"
    ],
    "homepage": "https://github.com/lvcms/core",
    "license": "MIT",
    "authors": [
        {
            "name": "bigrocs",
            "email": "bigrocs@qq.com",
            "homepage": "http://www.lece.vip",
            "role": "Developer"
        }
    ],
    "require": {
        "laravel/framework": "~5.7",
        "folklore/graphql": "^1.0",
        "tymon/jwt-auth": "~1.0",
        "lvcms/admin": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Lvcms\\Core\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lvcms\\Core\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Lvcms\\Core\\ServiceProvider"
            ]
        },
        "lvcms": {
            "name": "core",
            "title": "lvcms 核心系统",
            "description": "核心系统 lvcms 自动构建 JSON 数据",
            "author": "BigRocs",
            "version": "1.0.1",
            "providers": [
                "Lvcms\\Core\\ServiceProvider"
            ],
            "install": "lvcms:core:install",
            "uninstall": "lvcms:core:uninstall"
        }
    },
    "config": {
        "sort-packages": true
    }
}
